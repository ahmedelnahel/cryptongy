<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <crypto.soft.cryptongy.feature.shared.customView.CabTextView
        android:id="@+id/txtHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="17dp"
        android:text="Order History"
        android:textColor="@color/order_secondary2"
        android:textSize="@dimen/orderListTitle"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rect_left_right"
            android:layout_marginBottom="@dimen/_12sdp"
            android:paddingBottom="@dimen/_4sdp"
            >

            <Spinner
                android:id="@+id/spinnerOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </Spinner>

        </RelativeLayout>

        <RelativeLayout


            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingLeft="@dimen/_4sdp"


            android:layout_width="wrap_content"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/rect_left_right"
            >

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"
                android:visibility="gone" />

            <AutoCompleteTextView

                android:textSize="@dimen/_14sdp"
                android:id="@+id/inputCoinOrderhistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_toRightOf="@+id/icon_search"
                android:background="@android:color/white"
                android:hint="@string/watch_coin"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:singleLine="true"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/crvOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/_8sdp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <TableLayout
            android:id="@+id/tblOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

</merge>
