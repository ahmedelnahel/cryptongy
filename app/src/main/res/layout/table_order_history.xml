<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <crypto.soft.cryptongy.feature.shared.customView.CabTextView
        android:id="@+id/txtHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="17dp"
        android:text="Order History"
        android:textColor="@color/order_secondary2"
        android:textSize="@dimen/orderListTitle"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="@dimen/_12sdp"

        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/rect_left_right"
            android:padding="2dp"

            >

            <Spinner
                android:id="@+id/spinnerOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </Spinner>

        </RelativeLayout>

        <RelativeLayout
            android:paddingBottom="@dimen/_16sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/rect_left_right"
            >

            <ImageView
                android:visibility="gone"
                android:id="@+id/icon_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search" />

            <AutoCompleteTextView
                android:id="@+id/inputCoinOrderhistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon_search"
                android:background="@android:color/white"
                android:hint="@string/watch_coin"
                android:paddingLeft="4dp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:singleLine="true"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/crvOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <TableLayout
            android:id="@+id/tblOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

</merge>
