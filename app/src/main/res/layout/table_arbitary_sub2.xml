<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orderSub"
    android:orientation="horizontal"
    android:paddingBottom="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="5dp"
    android:paddingTop="7dp">

    <crypto.soft.cryptongy.feature.shared.customView.CalTextView
        android:id="@+id/txtTitleCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/order_tbl_sub_pad"
        android:textColor="@color/order_tbl_sub"
        android:textSize="@dimen/order_tbl_sub" />

    <crypto.soft.cryptongy.feature.shared.customView.CalTextView
        android:id="@+id/txtTitlePrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/order_tbl_sub_pad"
        android:textColor="@color/order_tbl_sub"
        android:textSize="@dimen/order_tbl_sub" />

    <crypto.soft.cryptongy.feature.shared.customView.CalTextView
        android:id="@+id/txtTitlePrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/order_tbl_sub_pad"
        android:textColor="@color/order_tbl_sub"
        android:textSize="@dimen/order_tbl_sub" />

    <crypto.soft.cryptongy.feature.shared.customView.CalTextView
        android:id="@+id/txtTitlePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/order_tbl_sub_pad"
        android:textColor="@color/order_tbl_sub"
        android:textSize="@dimen/order_tbl_sub" />


</LinearLayout>