<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Progress_AppTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Progress_Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">#ffffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="checkbox">
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="check" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorForeground">@android:color/background_light</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="edit" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
</resources>
